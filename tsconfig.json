{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "isolatedModules": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
        "types": [
            "react",
            "react-dom"
        ],
        // ðŸ‘‡ Add these for types
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "noEmit": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}